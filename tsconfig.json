{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "incremental": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
